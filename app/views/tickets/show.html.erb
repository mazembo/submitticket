<div id="ticket">
	<div class="page-header">
		<h1><%= @project.name%></h1>
	</div>
	<div class="page-header">
		<h2><%= @ticket.title %></h2>
	</div>
	<p id="author">
		Created by <%= @ticket.author.email %>, <%= time_ago_in_words(@ticket.created_at)%>
	</p>
	<ul class="actions">
		<% if policy(@ticket).update? %>
		<li><%= link_to "Edit Ticket", [:edit, @project, @ticket], class: "edit"%></li>
		<% end %>
		<% if policy(@ticket).destroy? %>
		<li><%= link_to "Delete Ticket", [@project, @ticket], method: :delete, data: { confirm: "Are you sure you want to delete this ticket?"}, class: "delete"%></li>
		<% end %>
	</ul>
	
	<%= simple_format (@ticket.description) %>
	<div id="author">Created by <%= @ticket.author.email %></div>
	<% if @ticket.asset.present? %>
	<h3>Attached File</h3>
	<div class="asset">
		<p>
			<%= link_to File.basename(@ticket.asset.path), @ticket.asset.url %>
		</p>
		<p><small><%= number_to_human_size(@ticket.asset.size) %></small>></p>
	</div>
	<% end %>
</div> 
